<div id='sidebar' class='span4'>
  <h1><a href="/"><%= theme_configs[:blog_title] %></a></h1>
  <p id="tagline"><%= theme_configs[:blog_description] %></p>

  <subscribe>
    <small>Subscribe:
    <%= theme_configs[:subscribe][:links].collect{ |data|
      name, url = data
      %{<a href="#{url}">#{name}</a>}
    }.join(' | ')%>
  </subscribe>

  <div class="typo-sidebars">
    <%= render_sidebars %>
  </div>
</div>
