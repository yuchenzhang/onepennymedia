<div id='sidebar' class='span4'>
  <h1><a href="/"><%= theme_configs[:blog_title] %></a></h1>
  <p id="tagline"><%= theme_configs[:blog_description] %></p>

  <subscribe>
    <small>Subscribe: <a href="/articles.rss">rss</a>
    <% if theme_configs[:contact][:email].present? %>
      | <a href="<%= theme_configs[:contact][:email] %>">email</a>
    <% end %>
    <% if theme_configs[:contact][:twitter].present? %>
      | <a href="<%= theme_configs[:contact][:twitter] %>">twitter</a>
    <% end %>
  </subscribe>

  <div>
    <%= form_tag('/search', method: :get) do %>
      <%= text_field_tag :q, params[:q] %><%= submit_tag 'Search' %>
    <% end %>
  </div>

  <div class="typo-sidebars">
    <%= render_sidebars %>
  </div>
</div>
